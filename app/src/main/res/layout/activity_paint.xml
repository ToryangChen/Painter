<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/acticity_paint">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/paintView"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_marginLeft="7dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/button">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pen_press"
                android:layout_gravity="center"
                android:background="#00000000"
                android:id="@+id/pen_button"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/eraser"
                android:layout_gravity="center"
                android:background="#00000000"
                android:id="@+id/eraser_button"/>
            <Spinner
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="0dp"
                android:background="@drawable/spinner_black"
                android:layout_gravity="center"
                android:id="@+id/color"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00000000"
                android:layout_gravity="center"
                android:id="@+id/clearButton"
                android:src="@drawable/clear"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/invisibleButton"
                android:layout_gravity="center"
                android:background="#00000000"
                android:src="@drawable/passon"/>

            </LinearLayout>


        </RelativeLayout>

</LinearLayout>
